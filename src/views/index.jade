	section.block-photos
		.wrapper
			- var divArray = [{'c': 'photos__left', 'a': [0]},{'c': 'photos__center', 'a': [1,2]},{'c': 'photos__right', 'a': [3,4,5,6]}]
			- var photosArray = [{'isVideo': true, 'url': 'http://www.youtube.com/embed/dFutt678-K0', 'thumb': 'images/photos/thumb.png'},{'url': 'images/photos/8.jpg'},{'url': 'images/photos/2.jpg'},{'url': 'images/photos/3.jpg'},{'url': 'images/photos/4.jpg'},{'url': 'images/photos/5.jpg'},{'url': 'images/photos/6.jpg'}]
			each div in divArray
				div(class="#{div.c}")
					each i in div.a
						a.photos-item.js-fancybox(class = photosArray[i].isVideo == true ? 'fancybox.iframe item-video':'' rel="gallery" href="#{photosArray[i].url}" data-row="3" data-number="#{i}")
							if photosArray[i].isVideo
								.item__image
									video.item__video(autoplay loop muted poster="images/photos/thumb.png")
										source(src="images/photos/video.mp4" type="video/mp4")
										source(src="images/photos/video.ogv" type="video/ogg")
							else
								.item__image(href="#" style="background-image: url(#{photosArray[i].url})")
